<div class="jumbotron" >
  <div class="container-fluid anchor " >
    <h1>Rotary Realm: Engine Parts</h1>
    <h2>Listing Products</h2>
  </div>
</div>

<p id="notice"><%= notice %></p>

<!-- <h1>Listing Products</h1> -->
<div class="col-xs-12 col-sm-12 col-md-12">
<table>
  <thead>
    <tr>
      <th class="col-xs-2 col-sm-2 col-md-2">Name</th>
      <th class="col-xs-8 col-sm-8 col-md-8">Description</th>
      <th class="col-xs-2 col-sm-2 col-md-2">Image url</th>
      <th class="col-xs-2 col-sm-2 col-md-2">Colour</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td><%= product.colour %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Product', new_product_path %>
