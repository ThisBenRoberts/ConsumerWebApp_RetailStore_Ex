<div class="jumbotron" >
	<div class="container-fluid anchor" >
		<h1>Rotary Realm: Contact</h1>
		<h2>Leave us a message</h2>
	</div>
</div>



<div> 
<h1>Contact Us</h1>
<h1>Using the New Email Contact form below </h2>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <%= label_tag :name, "Name" %>
            <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
        </div>      
        <div class="form-group">
            <%= label_tag :email, "Email Address" %>
            <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
        </div>
        <div class="form-group">
            <%= label_tag :message, "Message" %>
            <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
        </div>      
    </div>
</div>
<%= submit_tag "Send" %>   
<% end %>
</div>




</div> <!-- / Contact Form -->
<div class="col-xs-12 col-sm-12 col-md-12">
	<%= image_tag("rotary.jpg") %>
</div>
